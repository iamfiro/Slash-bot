generator client {
  provider = "prisma-client-js"
  relationMode = "prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model UserLevel {
  userId String @unique
  xp BigInt @default(0)
  level Int @default(0)
}

model ValorantRegister {
  userId String @unique
  server String
  valorantName String @default("")
  valorantTag String @default("")
}

model User {
  userId String @unique
  Economy Economy?
  userName String @default("")
}

model Economy {
  userName String @default("")
  userId String @unique
  user User @relation(fields: [userId], references: [userId])
  balance BigInt @default(0)
  mile Int @default(0)
  lastUsedDailyCommand String
}

model Warn {
  id Int @default(autoincrement()) @unique
  userId String
  reason String?
}

model BadWord {
  id Int @default(autoincrement()) @unique
  userId String
  message String?
}

model TeachText {
  id Int @default(autoincrement()) @unique
  userId String
  reconizeText String?
  message String?
}